#!/bin/bash

if [[ -z $1 ]]; then
    wg-quick up pvpn-fr
else
    case $1 in

        fr)
            wg-quick up pvpn-fr
            ;;
        uk)
            wg-quick up pvpn-uk
            ;;
        down)
			interface=$(sudo wg | grep interface | awk '{print $2}')
			wg-quick down $interface
			;;
        *)
            echo "Commande inconnue."
            ;;
    esac
fi